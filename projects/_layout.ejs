<!DOCTYPE html>
<html>
	<head>
	  	<title><%= title %></title>
	    <link rel='stylesheet' href='/main.css' />
	    <script src="/app.js"></script>
	    <meta name="description" content="<%= description %>" />
	    <meta name="robots" content="index, follow" >
		<meta name="revisit-after" content="1 month">
		<meta name="author" content="Ethan Eldridge, Scott MacEwan, Shelby Smullen, Joshua Dickerson">
		<link rel="shortcut icon" href="/images/favicon.ico" type="image/ico">
		<link rel="icon" href="/images/favicon.ico" type="image/ico">
	  	<!-- Meta information for Search Engines and site description -->
	  	<META name="description" content=>
	  	<META name="keywords" content="Xenon Apps, xenon, website, projects">
	  	<style type="text/css">
	  	.project-block{
	  		margin-left: 5%;
	  	}
	  	.project-block p{
	  		margin-left: 0%;
	  	}
	  	</style>
	</head>

	<body>
		<%- partial('../_header.ejs') %>
		<div id="content" class="index project-page">
			<section>
				<h2>Projects</h2>
				<nav id="projects-list"> 
					<ul>
						<li class="link">
							<a href="javascript:;" id="project-back" >&lt;</a>
						</li>
					<% for(var slug in public.projects._data){ %>
						<%if (slug != current.source) {%>
						<li>
					  		<h3><a href="/projects/<%= slug %>.html"><%= public.projects._data[slug].title %></a></h3>
					  		<p>
					  			<%= public.projects._data[slug].description %>
					  		</p>
					  	</li>
					  	<% }; %>
					<% }; %>
						<li class="link">
							<a href="javascript:;" id="project-forward" >&gt;</a>
						</li>
					</ul>
				</nav>
			</section>
			<%- yield %>
		</div>	
		<%- partial("../_footer.ejs") %>
	</body>
</html>